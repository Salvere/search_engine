<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="log.base" value="/Users/yjj/m/log"/>

    <appender name="errorlog" class="ch.qos.logback.core.rolling.RollingFileAppender" additivity="false">
        <File>${log.base}/error.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.base}/error.log.%d{yyyy-MM-dd'.log'}</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%5p %d{yyyy-MM-dd HH:mm:ss} %c %L Line - %m %n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <appender name="stdlog" class="ch.qos.logback.core.rolling.RollingFileAppender" additivity="false">
        <File>${log.base}/std.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.base}/std.log.%d{yyyy-MM-dd'.log'}</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%5p %d{yyyy-MM-dd HH:mm:ss} %c %L Line - %m %n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <!--<level>INFO</level>-->
            <level>INFO</level>
        </filter>
    </appender>


    <appender name="console" class="ch.qos.logback.core.ConsoleAppender" additivity="false">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss} %5p %c:%L] %m%n</pattern>
        </encoder>
    </appender>


    <logger name="com.travel.search" level="DEBUG">
        <appender-ref ref="stdlog"/>
        <appender-ref ref="errorlog"/>
    </logger>


    <root level="DEBUG">
        <appender-ref ref="console"/>
    </root>

</configuration>